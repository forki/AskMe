<Window x:Class="AskMe.WPF.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AskMe"
        Height="550"
        Width="644">
  <Grid>
    <Label Height="114"
           HorizontalAlignment="Center"
           Margin="12,13,12,0"
           
           VerticalAlignment="Top"
           Width="598"
           DataContext="{Binding}"
           Target="{Binding}"
           FontSize="28"
           HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center">
      <TextBlock Text="Here comes the text of the current item in the questionaire."
                 TextWrapping="Wrap" 
                 Name="itemTextBlock" />
    </Label>
    <ListBox Height="218"
             Margin="12,0,12,171"
             Name="answersListBox"
             VerticalAlignment="Bottom" />
    <Button Content="Next"
            Height="23"
            HorizontalAlignment="Left"
            Margin="535,476,0,0"
            Name="nextButton"
            VerticalAlignment="Top"
            Width="75"
            Click="NextButtonClick" />
  </Grid>
</Window>