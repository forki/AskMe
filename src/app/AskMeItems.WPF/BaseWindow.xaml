<Window x:Class="AskMeItems.WPF.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WPF="clr-namespace:AskMeItems.WPF"
        Title="AskMeItems"
        WindowStyle="None"
        WindowState="Maximized"
        SizeChanged="WindowSizeChanged"
        Width="1200"
        Height="980">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static WPF:BaseWindow.EnterPressedCommand}" Executed="EnterPressed"/>
    </Window.CommandBindings>

    <Grid SizeChanged="GridSizeChanged">
    <Frame HorizontalAlignment="Center"
           Margin="12,62,12,0"
           Name="frame1"
           Width="1154"
           Height="827"
           VerticalAlignment="Top"
           HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center" />
    <Button Content="Next"
            HorizontalAlignment="Right"
            Margin="0,903,570,0"
            Name="NextButton"
            VerticalAlignment="Top"
            Width="125"
            
            Click="NextButtonClick" />
    <Label Height="28"
           HorizontalAlignment="Left"
           Margin="12,901,0,0"
           Name="ErrorLabel"
           VerticalAlignment="Top"
           HorizontalContentAlignment="Left"
           Content="ErrorLabel"
           Width="515"
           Foreground="#FFFC0000" />
  </Grid>
</Window>